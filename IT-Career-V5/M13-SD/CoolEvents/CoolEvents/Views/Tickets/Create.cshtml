@model CreateTicketViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<h3>Are you sure you want to buy this ticket?</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="EventId" type="hidden" class="form-control" />
                <input asp-for="UserId" type="hidden" class="form-control" />
                <input asp-for="EventName" type="hidden" class="form-control" />
                <input asp-for="EventDate" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <p>@Model.EventName</p>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <p>@Model.EventDate</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
