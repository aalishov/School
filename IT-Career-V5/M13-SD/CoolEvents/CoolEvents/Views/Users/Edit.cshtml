@model EditUserViewModel

<h2>Edit user</h2>

<div class="row">
    <div class="col-md-4">    </div>
    <div class="col-md-4">
        <form id="registerForm" asp-action="Edit" method="post">
            <h2>Edit user account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" aria-required="true" />
                <label asp-for="FirstName">First name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" aria-required="true" />
                <label asp-for="LastName">Last name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>


            <button  type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </form>
    </div>
